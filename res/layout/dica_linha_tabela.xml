<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout5" android:layout_width="fill_parent" android:orientation="horizontal" android:gravity="center_vertical">
        <LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayout6" android:layout_width="fill_parent">
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:layout_width="fill_parent" android:orientation="vertical">
               	<LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:orientation="horizontal">
			<ImageView android:layout_height="wrap_content" android:src="@drawable/tip" android:layout_width="wrap_content" android:paddingRight="5dp" android:id="@+id/imagem"></ImageView>
			<TextView android:layout_height="wrap_content" android:textColor="#6ee249" android:textSize="18dp" android:text="Tips:" android:layout_width="wrap_content" android:id="@+id/titulo"></TextView>
		</LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/linearLayout3" android:layout_width="fill_parent" android:padding="5dp">
                    <TextView android:layout_height="wrap_content" android:textColor="#000000" android:textSize="16dp" android:layout_width="wrap_content" android:text="My goal:" android:id="@+id/tip"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>